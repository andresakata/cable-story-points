Planning Room

<table>
  <thead>
    <th>User</th>
    <th>Points</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id='<%= user %>'>
        <td><%= user %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with(url: '/set_points', method: 'post', remote: true) do %>
  <%= label_tag(:user, 'Points:') %>
  <%= text_field_tag(:points) %>
  <%= submit_tag('Send') %>
<% end %>

<script>
  var room = <%= cookies[:room] %>
</script>

<%= javascript_pack_tag 'planning_room' %>